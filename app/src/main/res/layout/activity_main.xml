<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    tools:context="ziphome.fxtmdiscount2.MainActivity"
    android:focusableInTouchMode="true">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6">

       <!--204B4B-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#0f6780"
            android:orientation="vertical"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:background="#074963"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:visibility="visible"
                    app:srcCompat="@drawable/logowhite" />


                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="198dp"
                    android:layout_height="match_parent"
                    android:paddingLeft="8dp"
                    android:paddingTop="25dp"
                    android:text="Time is Money. \n Invest it wisley"
                    android:textColor="#fffffe"
                    android:textIsSelectable="false" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:allowUndo="false"
                android:background="#131c28"
                android:text="Welcome to FXTM Discount center"
                android:textAlignment="center"
                android:textSize="14sp" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="3dp"
                android:background="@drawable/separator" />

            <SearchView
                android:id="@+id/search"
                android:layout_width="match_parent"
                android:layout_height="62dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="5dp"
                android:verticalScrollbarPosition="defaultPosition">

            </SearchView>

            <ExpandableListView
                android:id="@+id/explv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="100"
                android:background="#0f6780"
                android:scrollbars="none"/>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>
